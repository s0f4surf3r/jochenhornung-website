---
layout: base
---
<style>
    .text-meta {
        font-size: 0.8rem;
        color: #bbb;
        letter-spacing: 0.1em;
        text-transform: uppercase;
        margin-bottom: 1.5rem;
    }
    
    .text-excerpt {
        font-family: Georgia, serif;
        font-size: 0.9rem;
        font-style: italic;
        color: #888;
        margin-bottom: 4rem;
        line-height: 1.6;
        max-width: 600px;
    }
    
    .text-title {
        font-family: Georgia, serif;
        font-size: 1.8rem;
        font-weight: 400;
        margin-bottom: 0;
        line-height: 1.3;
    }
    
    .text-content {
        font-family: Georgia, serif;
        line-height: 1.5;
        max-width: 600px;
        margin-top: -0.5rem;
    }
    
    .text-content p {
        margin-top: 0;
        margin-bottom: 1.5rem;
    }
    
    /* Hero Image - als visueller Nachklang */
    .text-hero-image {
        width: 100%;
        max-width: 600px;
        height: auto;
        margin-top: 4rem;
        opacity: 0.7;
    }
    
    .text-back {
        display: inline-block;
        margin-bottom: 2.5rem;
        color: #999;
        text-decoration: none;
        font-size: 0.85rem;
    }
    
    .text-back:hover {
        color: #1a1a1a;
    }

    .donation-block {
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid #eee;
        max-width: 600px;
    }

    .donation-block p {
        color: #666;
        font-size: 0.9rem;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    }

    .donation-button {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        margin-top: 0.5rem;
        padding: 0.6rem 1.3rem;
        background: #1a1a1a;
        color: white;
        text-decoration: none;
        border-radius: 6px;
        font-size: 0.9rem;
    }

    .quellen-block {
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid #eee;
        max-width: 600px;
    }

    .quellen-block h3 {
        font-size: 1rem;
        color: #666;
        margin-bottom: 0.5rem;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    }

    .quellen-block .text-content {
        margin-top: 0;
    }
</style>
<div class="content-page">
    <a href="/texte/" class="text-back">← Zurück zu Texte</a>
    
    <div class="text-header">
        <div class="text-meta">
            {{ date | readableDate }}{% if type %} · {{ type }}{% endif %}
        </div>
        {% if excerpt %}
        <div class="text-excerpt">{{ excerpt }}</div>
        {% endif %}
        <h1 class="text-title">{{ title }}</h1>
    </div>
    
    <div class="text-content">
        {{ content | safe }}
    </div>

