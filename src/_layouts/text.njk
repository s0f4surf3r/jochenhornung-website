---
layout: base
---
<style>
    /* Hero Image */
    .text-hero-image {
        width: 100%;
        max-width: 800px;
        height: 350px;
        object-fit: cover;
        margin-bottom: 3rem;
        opacity: 0.85;
    }

    .text-meta {
        font-size: 0.8rem;
        color: #bbb;
        letter-spacing: 0.1em;
        text-transform: uppercase;
        margin-bottom: 1.5rem;
    }
    
    .text-excerpt {
        font-family: Georgia, serif;
        font-size: 0.9rem;
        font-style: italic;
        color: #888;
        margin-bottom: 4rem;
        line-height: 1.6;
        max-width: 600px;
    }
    
    .text-title {
        font-family: Georgia, serif;
        font-size: 1.8rem;
        font-weight: 400;
        margin-bottom: 0;
        line-height: 1.3;
    }
    
    .text-content {
        font-family: Georgia, serif;
        line-height: 1.5;
        max-width: 600px;
        margin-top: -0.5rem;
    }
    
    .text-content p {
        margin-top: 0;
        margin-bottom: 1.5rem;
    }
    
    .text-back {
        display: inline-block;
        margin-bottom: 2.5rem;
        color: #999;
        text-decoration: none;
        font-size: 0.85rem;
    }
    
    .text-back:hover {
        color: #1a1a1a;
    }
</style>

<div class="content-page">
    <a href="/texte/" class="text-back">← Zurück zu Texte</a>
    
    {% if heroImage %}
    <img src="{{ heroImage }}" alt="" class="text-hero-image">
    {% endif %}
    
    <div class="text-header">
        <div class="text-meta">
            {{ date | readableDate }}{% if type %} · {{ type }}{% endif %}
        </div>
        {% if excerpt %}
        <div class="text-excerpt">{{ excerpt }}</div>
        {% endif %}
        <h1 class="text-title">{{ title }}</h1>
    </div>
    
    <div class="text-content">
        {{ content | safe }}
    </div>
</div>
