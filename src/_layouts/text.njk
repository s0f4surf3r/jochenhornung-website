---
layout: base
---
<style>
    .text-meta {
        font-size: 0.95rem;
        color: #666;
        margin-bottom: 0.5rem;
    }
    
    .text-title {
        font-family: Georgia, serif;
        font-size: 2.2rem;
        font-weight: 400;
        margin-bottom: 2rem;
    }
    
    .text-content {
        font-family: Georgia, serif;
        line-height: 1.8;
    }
    
    .text-back {
        display: inline-block;
        margin-bottom: 2rem;
        color: #666;
        text-decoration: none;
        font-size: 0.9rem;
    }
    
    .text-back:hover {
        color: #1a1a1a;
    }
</style>

<div class="content-page">
    <a href="/texte/" class="text-back">← Zurück zu Texte</a>
    
    <div class="text-header">
        <div class="text-meta">
            {{ date | readableDate }}{% if type %} · {{ type }}{% endif %}
        </div>
        <h1 class="text-title">{{ title }}</h1>
    </div>
    
    <div class="text-content">
        {{ content | safe }}
    </div>
</div>
