---
layout: base
---
<style>
    .text-meta {
        font-size: 0.8rem;
        color: #bbb;
        letter-spacing: 0.1em;
        text-transform: uppercase;
        margin-bottom: 3rem; /* Datum schwebt oben */
    }
    
    .text-title {
        font-family: Georgia, serif;
        font-size: 1.8rem;
        font-weight: 400;
        margin-bottom: 1.5rem; /* Viel näher am Gedicht! */
        line-height: 1.3;
    }
    
    .text-content {
        font-family: Georgia, serif;
        line-height: 1.5;
        max-width: 600px;
    }
    
    .text-back {
        display: inline-block;
        margin-bottom: 2.5rem;
        color: #999;
        text-decoration: none;
        font-size: 0.85rem;
    }
    
    .text-back:hover {
        color: #1a1a1a;
    }
    
    .text-content p {
        margin-bottom: 1.5rem;
    }
</style>

<div class="content-page">
    <a href="/texte/" class="text-back">← Zurück zu Texte</a>
    
    <div class="text-header">
        <div class="text-meta">
            {{ date | readableDate }}{% if type %} · {{ type }}{% endif %}
        </div>
        <h1 class="text-title">{{ title }}</h1>
    </div>
    
    <div class="text-content">
        {{ content | safe }}
    </div>
</div>
