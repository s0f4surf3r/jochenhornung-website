        <a href="/ueber/">Über mich</a>
    </nav>
</div>

<script>
    // iOS Safari: nutze visualViewport statt outerHeight
    function setHeroHeight() {
        const hero = document.querySelector('.hero');
        if (!hero) return;

        const h = window.visualViewport ? window.visualViewport.height : window.innerHeight;
        hero.style.height = h + 'px';
    }

    setHeroHeight();
    window.addEventListener('resize', setHeroHeight);
    window.addEventListener('orientationchange', setHeroHeight);

    if (window.visualViewport) {
        window.visualViewport.addEventListener('resize', setHeroHeight);
        // optional: manche iOS-Versionen ändern Höhe beim Scrollen der URL-Bar
        window.visualViewport.addEventListener('scroll', setHeroHeight);
    }
</script>
