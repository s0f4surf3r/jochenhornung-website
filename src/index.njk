<script>
    // iOS 26 Fix: Hero auf volle Fensterhöhe setzen
    function setHeroHeight() {
        const hero = document.querySelector('.hero');
        if (hero) {
            hero.style.minHeight = window.outerHeight + 'px';
        }
    }
    setHeroHeight();
    window.addEventListener('resize', setHeroHeight);
</script>
